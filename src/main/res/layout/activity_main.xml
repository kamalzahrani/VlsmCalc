<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/logoVlsmCalc"
        android:layout_width="317dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="25dp"
        app:layout_constraintBottom_toTopOf="@id/txtVlsmCalc"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.615"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.077"
        app:srcCompat="@drawable/subneticon"
        tools:ignore="NotSibling" />

    <TextView
        android:id="@+id/txtVlsmCalc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="68dp"
        android:textColor="@color/colorPrimaryDark"
        android:text="VlsmCalc"
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logoVlsmCalc" />

    <Button
        android:id="@+id/hotes_activity_play_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:onClick="showHotesActivity"
        android:background="@color/Mycolor_7"
        android:text="HOTES"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txtVlsmCalc" />

    <Button
        android:id="@+id/subnets_activity_play_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@color/Mycolor_7"
        android:layout_marginTop="16dp"
        android:onClick="showSubnetsActivity"
        android:text="SUBNETS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/hotes_activity_play_btn" />

    <Button
        android:id="@+id/vlsm_activity_play_btn"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:background="@color/Mycolor_7"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:onClick="showVlsmActivity"
        android:padding="15dp"
        android:text="VLSM"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subnets_activity_play_btn" />


</androidx.constraintlayout.widget.ConstraintLayout>